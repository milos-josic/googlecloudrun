{
    "steps": [
        {
            "name": "gcr.io/cloud-builders/docker",
            "args": [
              "build",
              "-f", 
              "runTests.Dockerfile",
              "-t",
              "test_runner",
              "."
            ]
        },
        {
            "name": "gcr.io/cloud-builders/docker",
            "args": [
              "build",
              "-f", 
              "Dockerfile",
              "-t",
              "gcr.io/cbprojectid/cbapp_image",
              "."
            ]
        },
        {
            "name": "gcr.io/cloud-builders/docker",
            "args": [
              "push",
              "gcr.io/cbprojectid/cbapp_image"
            ]
          },
        {
          "name": "gcr.io/cloud-builders/gcloud",
          "args": [
            "beta",
            "run",
            "deploy",
            "cbapp",
            "--image",
            "gcr.io/cbprojectid/cbapp_image",
            "--region",
            "europe-west1",
            "--platform",
            "managed",
            "--allow-unauthenticated"
          ]
        }
    ]
}